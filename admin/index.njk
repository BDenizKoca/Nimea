<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Manager | Nimea Wiki</title>
  <link href="{{ '/admin/config.yml' | url }}" type="text/yaml" rel="cms-config-url">
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
  <style>
    .admin-floating-return{position:fixed;right:16px;bottom:16px;z-index:9999}
    .admin-floating-return .btn{background:#8b4513;color:#fff;border:0;border-radius:999px;padding:10px 14px;cursor:pointer;box-shadow:0 2px 10px rgba(0,0,0,.25)}
    .admin-floating-return .btn:hover{filter:brightness(1.05)}
  </style>
  <div class="admin-floating-return">
    <button class="btn" id="return-to-site" title="Return to Site">Return to Site</button>
  </div>
  <script>
    (function(){
      const btn = document.getElementById('return-to-site');
      function goBack(){
        try {
          const ref = document.referrer;
          const sameOrigin = ref && ref.startsWith(window.location.origin);
          if (sameOrigin && !/\/admin\//.test(ref)) {
            window.location.assign(ref);
            return;
          }
        } catch {}
        // Fallback: go to home
        window.location.assign('/');
      }
      btn && btn.addEventListener('click', goBack);
    })();
  </script>
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>
