<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Manager | Nimea Wiki</title>
  <link href="{{ '/admin/config.yml' | url }}" type="text/yaml" rel="cms-config-url">
  <style>
    #cms-error {
      display: none;
      background: #f8d7da;
      border: 1px solid #f5c6cb;
      color: #721c24;
      padding: 15px;
      margin: 20px;
      border-radius: 5px;
    }
    #auth-debug {
      position: fixed;
      bottom: 10px;
      right: 10px;
      background: rgba(0,0,0,0.7);
      color: white;
      padding: 10px;
      border-radius: 5px;
      font-size: 12px;
      max-width: 300px;
      z-index: 9999;
      display: none;
    }
  </style>
</head>
<body>
  <div id="cms-error">
    <h3>Authentication Error</h3>
    <p>There was a problem authenticating with GitHub. Please check:</p>
    <ol>
      <li>Your OAuth app configuration in GitHub Developer Settings</li>
      <li>The callback URL is set to <code>https://bdenizkoca.github.io/nimea/auth.html</code></li>
    </ol>
    <button onclick="retryAuth()">Retry Authentication</button>
    <p><small>For developers: Check the browser console for more details.</small></p>
  </div>
  
  <div id="auth-debug"></div>
  
  <!-- Include the script that builds the page and powers Decap CMS -->
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms-lib.js"></script>
  
  <script>
    console.log('CMS admin page loaded');
    
    // Initialize CMS manually to override config values
    window.CMS.init();
    
    // Add a listener for messages from the auth callback page
    window.addEventListener('message', function(event) {
      console.log('Message received in admin:', event.data);
      
      const authDebug = document.getElementById('auth-debug');
      authDebug.style.display = 'block';
      authDebug.innerHTML += `<div>Auth message received: ${JSON.stringify(event.data).substring(0, 50)}...</div>`;
      
      // Check if there's an error
      if (event.data && event.data.error) {
        document.getElementById('cms-error').style.display = 'block';
      }
    });
    
    // Check if authentication is already active
    window.addEventListener('DOMContentLoaded', function() {
      setTimeout(() => {
        // If CMS init failed, show error
        if (!window.CMS || !window.CMS.getBackend) {
          document.getElementById('cms-error').style.display = 'block';
        }
      }, 3000);
    });
    
    function retryAuth() {
      // Clear any auth tokens from localStorage
      for (let i = 0; i < localStorage.length; i++) {
        const key = localStorage.key(i);
        if (key && (key.startsWith('netlify-cms') || key.startsWith('decap-cms') || key.startsWith('gh-oauth-'))) {
          localStorage.removeItem(key);
        }
      }
      // Reload the page
      window.location.reload();
    }
  </script>
</body>
</html>
